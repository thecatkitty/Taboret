@using Taboret.Models
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IStringLocalizer<Shared> SharedLocalizer
@model Taboret.Models.Category

@{
 ViewData["Title"] = $"{Model.Name}";
 ViewData["Description"] = $"{SharedLocalizer["Category"].Value} - {Model.Name}";
 Layout = "~/Pages/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
 <ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="/">@Localizer["Start"]</a></li>
  <li class="breadcrumb-item"><a asp-action="Index">@Localizer["Categories"]</a></li>
  <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
 </ol>
</nav>

<h1>@string.Format(Localizer["Articles in the category “{0}”"].Value, Model.Name)</h1>


<div class="row">
 <div class="col">
  <partial name="_ArticleList" model="Model.Articles" />
 </div>
</div>
